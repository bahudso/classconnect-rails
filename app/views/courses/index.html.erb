<h1>Listing Courses</h1>
<table>
  <tr>
    <th>Course</th>
    <th>Section</th>
    <th>Teacher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.section %></td>
    <td><%= course.teacher.name unless !course.teacher %></td>
    <td><%= link_to 'Show', course %> | <%= link_to 'Edit', edit_course_path(course) %> | <%= link_to 'Destroy', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New course', new_course_path %>