<p>
  <strong>Course:</strong>
  <%= @course.name %>
</p>
 
<p>
  <strong>Section:</strong>
  <%= @course.section %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= link_to @course.teacher.name, teacher_path(@course.teacher) unless !@course.teacher %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
<% @course.posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Back', courses_path %> | <%= link_to 'Edit', edit_course_path(@course) %> | <%= link_to 'Destroy', course_path(@course), method: :delete, data: { confirm: 'Are you sure?' } %>