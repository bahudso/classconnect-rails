<h1>Listing teachers</h1>
<table>
  <tr>
    <th>Teacher</th>
    <th>Department</th>
    <th></th>
  </tr>
 
<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.name %></td>
    <td><%= teacher.department %></td>
    <td><%= link_to 'Show', teacher %> | <%= link_to 'Edit', edit_teacher_path(teacher) %> | <%= link_to 'Destroy', teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New teacher', new_teacher_path %>