<p>
  <strong>Teacher:</strong>
  <%= @teacher.name %>
</p>
 
<p>
  <strong>Department:</strong>
  <%= @teacher.department %>
</p>

<table>
  <tr>
    <th>Course</th>
    <th>Section</th>
    <th></th>
  </tr>
 
<% @teacher.courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.section %></td>
    <td><%= link_to 'Show', course %> | <%= link_to 'Edit', edit_course_path(course) %> | <%= link_to 'Destroy', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Back', teachers_path %> | <%= link_to 'Edit', edit_teacher_path(@teacher) %> | <%= link_to 'Destroy', teacher_path(@teacher), method: :delete, data: { confirm: 'Are you sure?' } %>